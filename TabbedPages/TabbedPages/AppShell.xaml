<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TabbedPages.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TabbedPages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="home" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}"/>
        </Tab>
          <Tab Title="store" Icon="store.jpeg">
            <ShellContent ContentTemplate="{DataTemplate local:StorePage}"/>
        </Tab>
          <Tab Title="shop" Icon="shop.png">
            <ShellContent ContentTemplate="{DataTemplate local:ShopPage}"/>
        </Tab>
          <Tab Title="payment" Icon="payment.png">
            <ShellContent ContentTemplate="{DataTemplate local:PaymentPage}"/>
        </Tab>
    </TabBar>

</Shell>

